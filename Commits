#!/usr/bin/make -f

version := 0.1.0
comment := Initializes for ansible
comment := Works on README

main:;
	@echo git status
	@echo git add -n .
	@echo git add .
	@echo git log --oneline -n 5
	@echo git commit -m "'$(comment)'"
	@echo
	@echo git tag -a v$(version) -m "'$(comment)'"
	@echo git push --follow-tags

.PHONY: main

